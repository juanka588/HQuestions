<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="personal.unal.com.healthquestions.GUI.ResultActivityFragment"
    tools:showIn="@layout/activity_result">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="102dp"
        android:layout_height="100dp"
        android:layout_marginLeft="436dp"
        android:layout_marginTop="28dp"
        android:background="@android:color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_user" />

    <EditText
        android:id="@+id/player_name_input"
        android:layout_width="140dp"
        android:layout_height="33dp"
        android:layout_marginRight="42dp"
        android:layout_marginTop="12dp"
        android:hint="Ingresa tu nombre"
        android:textColor="@android:color/white"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/total_score"
        style="@style/DisplayInfoStyle"
        android:layout_width="240dp"
        android:layout_height="30dp"
        android:layout_marginRight="109dp"
        android:layout_marginTop="173dp"
        android:text="Puntaje total:"
        app:layout_constraintRight_toLeftOf="@+id/player_name_input"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/player_name"
        style="@style/DisplayInfoStyle"
        android:layout_width="240dp"
        android:layout_height="30dp"
        android:layout_marginRight="109dp"
        android:layout_marginTop="140dp"
        android:text="tu nombre"
        app:layout_constraintRight_toLeftOf="@+id/player_name_input"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView

        android:id="@+id/total_questions"
        style="@style/DisplayInfoStyle"
        android:layout_width="240dp"
        android:layout_height="30dp"
        android:layout_marginLeft="61dp"
        android:layout_marginTop="0dp"
        android:text="Preguntas resultas /20"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/total_score" />

    <TextView
        android:id="@+id/powers_used"
        style="@style/DisplayInfoStyle"
        android:layout_width="240dp"
        android:layout_height="30dp"
        android:layout_marginLeft="61dp"
        android:layout_marginTop="-4dp"
        android:text="Ayudas usadas /3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/total_questions" />

</android.support.constraint.ConstraintLayout>
