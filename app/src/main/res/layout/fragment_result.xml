<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:padding="16dp"
    tools:context="personal.unal.com.healthquestions.GUI.ResultActivityFragment"
    tools:showIn="@layout/activity_result">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="102dp"
        android:layout_height="100dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="100dp"
        android:background="@android:color/white"
        app:srcCompat="@drawable/ic_user" />

    <EditText
        android:id="@+id/player_name_input"
        android:layout_width="240dp"
        android:layout_height="45dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/imageView"
        android:layout_marginRight="40dp"
        android:layout_marginTop="12dp"
        android:hint="Ingresa tu nombre"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/total_score"
        style="@style/DisplayInfoStyle"
        android:layout_width="240dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:text="Puntaje total:" />

    <TextView
        android:id="@+id/player_name"
        style="@style/DisplayInfoStyle"
        android:layout_width="240dp"
        android:layout_height="30dp"
        android:layout_below="@+id/total_score"
        android:text="tu nombre" />

    <TextView

        android:id="@+id/total_questions"
        style="@style/DisplayInfoStyle"
        android:layout_width="240dp"
        android:layout_height="30dp"
        android:layout_below="@+id/player_name"
        android:text="Preguntas resultas /20" />

    <TextView
        android:id="@+id/powers_used"
        style="@style/DisplayInfoStyle"
        android:layout_width="240dp"
        android:layout_height="30dp"
        android:layout_below="@+id/total_questions"
        android:text="Ayudas usadas /3" />

</RelativeLayout>
